<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- ScrollView z zawartością -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/homeContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:gravity="center_horizontal">

            <!-- Tytuł -->
            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BydGo"
                android:textSize="24sp"
                android:textColor="#1D1B20"
                android:gravity="center"
                android:paddingBottom="24dp"/>

            <!-- Autorzy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_frame_discovered"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/homeAuthorsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Autorzy projektu"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/homeAuthorsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team ProcrastiNation:\n- Jan Drzażdżyński\n- Kacper Fordon\n- Krzysztof Jósiak\n- Dorota Mockiewicz\n- Kordian Rogalski"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Drużyna / Informacje o projekcie -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/item_frame_discovered"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/homeTeamTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Projekt zrealizowany w ramach\nHackNation 2025\ndla Urzędu Miasta Bydgoszcz "
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/homeTeamInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="placeholder"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Przycisk Powrót -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powrót"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:background="@drawable/sffde00sw2cr100bffffff"
            android:textColor="#6750A4"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>


</LinearLayout>
